<div class="container-fluid text-center">
    <form name="serachinfo" method="post" action="./searchTicket">
        <legend>搜索酒店</legend>
        <div class="row-fluid">
            <div class="col-md-6">
                <label>出发地</label>
                <input type="text" name="Departure" class='form-control'/>
                <span class="help-block">输入您的出发地</span>
            </div>
            <div class="col-md-6">
                <label>目的地</label>
                <input type="text" name="Destination" class='form-control'/>
                <span class="help-block">输入您的目的地</span>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <div class="form-group">
                    <label for="dtp_input2" class="col-md-2 control-label">出发日期</label>
                    <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="16" type="text" value="" readonly>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-remove"></span>
                        </span>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    <input type="hidden" id="dtp_input2" value="" name='Depart_time'/><br/>
                </div>
            </div>
            <div class="span4">
                <div class="form-group">
                    <label for="dtp_input3" class="col-md-2 control-label">返程日期</label>
                    <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input3" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="16" type="text" value="" readonly>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-remove"></span>
                        </span>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    <input type="hidden" id="dtp_input3" value="" name='Return_time'/><br/>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <label>最低价格</label>
                <input type="text" name="textfield_minprice"/>
                <span class="help-block">您能接受的最低的价格</span>
            </div>
            <div class="span4">
                <label>最高价格</label>
                <input type="text" name="textfield_maxprice"/>
                <span class="help-block">您能接受的最高的价格</span>
            </div>
        </div>
        <button type="submit" class="btn">提交</button>
    </form>
</div>
