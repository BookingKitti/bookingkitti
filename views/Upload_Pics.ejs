<form class="form-signin" role="form" action=<%- "'"+url+ "'" %> method="post" enctype='multipart/form-data'>
    <div class="modal fade" id=<%- "'Upload_Pics'"%> tabindex="-1" role="dialog" aria-labelledby=
        <%-"'ModalLabel'"%> >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="myModalLabel">上传图片</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <fieldset>
                                <input id="fulAvatar" name="fulAvatar" type="file" class="form-control" />
                                <br/>
                            </fieldset>

                        </div>
                        <br>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"> 提交
                        </button>
                    </div>
                </div>
            </div>

    </div>
</form>
