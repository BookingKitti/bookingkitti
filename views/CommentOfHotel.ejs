<link href="/css/rate-star/star-rating.css" media="all" rel="stylesheet" type="text/css"/>
<script src="js/rate-star/star-rating.js" type="text/javascript"></script>

<form method="post" action=<%-"/comment"+HotelInfo[0].Hotel_ID %> >
    <div class="form-group">
        <legend>评价</legend>
        <label>评价星级</label>
        <input id="rate-star" type="text" class="rating" min=1 max=5 step=1 data-size="md" name="rating" showCaption=false>
    </div>
    <div class="form-group">
        <span class="help-block">请打分</span>
        <label>评价内容</label>
        <input type="text" name="content">
    </div>
    <button type="submit" class="btn">提交</button>
</form>
<script type='javascript'>
    $("rate-star").rating({size: 'md', showCaption: true, max: 5, min: 1, step: 1});
</script>
