<HTML>

    <head>
        <% include bootstrap_base.html %>
    </head>

    <body>
        <% include guideline.ejs %>
        <div class="main-container">
            <div class="span7 text-center">
                <form name="serachinfo" method="post" action="./search">
                    <legend>搜索酒店</legend>
                    <div class="container-fluid">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="row-fluid">
                                    <div class="span4">
                                        <label>酒店名</label>
                                        <input type="text" name="textfield_hotel_name"/>
                                        <span class="help-block">输入酒店名</span>
                                    </div>
                                    <div class="span4">
                                        <label>城市</label>
                                        <input type="text" name="combobox_city"/>
                                        <span class="help-block">输入城市名</span>
                                    </div>
                                    <div class="span4">
                                        <label>所在省</label>
                                        <input type="text" name="combobox_province"/>
                                        <span class="help-block">输入省名</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span12">
                        <div class="row-fluid">
                            <div class="span4">
                                <label>地段</label>
                                <input type="text" name="textfield_address"/>
                                <span class="help-block">输入地段</span>
                            </div>
                            <div class="span4">
                                <label>入住日期</label>
                                <input type="text" name="date_checkin"/>
                                <span class="help-block">入住的日期</span>
                            </div>
                            <div class="span4">
                                <label>所在省</label>
                                <input type="text" name="date_checkout"/>
                                <span class="help-block">离店的日期</span>
                            </div>
                        </div>
                    </div>
                    <div class="span12">
                        <div class="row-fluid">
                            <div class="span4">
                                <label>最低价格</label>
                                <input type="text" name="textfield_minprice"/>
                                <span class="help-block">您能接受的最低的价格</span>
                            </div>
                            <div class="span4">
                                <label>最高价格</label>
                                <input type="text" name="textfield_maxprice"/>
                                <span class="help-block">您能接受的最高的价格</span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn">提交</button>
                </form>
            </div>
        </div>
        <% include footer.html %>
    </body>

</html>
