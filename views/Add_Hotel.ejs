<form name="Add_Hotel" method="post" action="addHotel">
    <div class="modal fade" id=<%- "'Add_Hotel'"%> tabindex="-1" role="dialog" aria-labelledby=
        <%-"'ModalLabel'"%> >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="myModalLabel">
                添加酒店
             </h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="Hotel_Name" class="form-control" required="required" placeholder="酒店名" />
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="Merchant_ID" class="form-control" required="required" placeholder="卖家ID" />
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="Province" class="form-control" required="required" placeholder="省" />
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="City" class="form-control" required="required" placeholder="市" />
                            </div>
                            <div class="col-md-3">
                                <input type="text" name="Address" class="form-control" required="required" placeholder="详细地址" />
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="number" name="Stars" class="form-control" max=5 min=1 required="required" placeholder="星级" />
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-10">
                                <textarea class="form-control" rows="6" name="Description" required="required" placeholder="详细描述"></textarea>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="PhoneNumber" class="form-control" required="required" placeholder="电话号码" />
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="Discount" class="form-control" required="required" placeholder="折扣" />
                            </div>
                        </div>
                        <br>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" >
                            提交
                        </button>
                    </div>
                </div>
            </div>

    </div>

</form>
