<html>

    <head>
        <% include bootstrap_base.html %>
    </head>
    <% include guideline.ejs %>
    <body>
        <div class='main-container'>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="row-fluid">
                            <div class="span6">
                                <ul class='list-group'>
                                    <li class='list-group-item'>
                                        酒店名：
                                        <%= HotelInfo[0].Hotel_Name %><br>
                                        <%= HotelInfo[0].City %>--<%= HotelInfo[0].Province  %>
                                    </li>
                                    <ul></div>
                                    <div class="span6">
                                        <ul class="list-group">
                                            <li class="list-group-item">
                                                价格区间：
                                                <%= Price %><br>
                                                联系方式：
                                                <%= HotelInfo[0].PhoneNumber %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row-fluid">
                            <div class="span12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                房间类型
                                            </th>
                                            <th>
                                                房间价格
                                            </th>
                                            <th>
                                                房间数量
                                            </th>
                                            <th>
                                                预定
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i=0;i<RoomInfo.length;i++){%>
                                            <tr class="info">
                                                <td>
                                                    <%- RoomInfo[i].Type %>
                                                </td>
                                                <td>
                                                    <%- RoomInfo[i].Price %>
                                                </td>
                                                <td>
                                                    <%- RoomInfo[i].Available%>
                                                </td>
                                                <td>
                                                    <input type="text" name="RoomOrder" value=1>
                                                </td>
                                            </tr>
                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                      <div class="span7 text-center"><button type="submit" class="btn">预定</button></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <ul>
                              <% for (var i=0;i<Comment.length;i++){ %>
                                <li><%- "评分： "+Comment[i].Scores+<br>+"评价内容： "+Comment[i].Comments %></li>
                                <%}%>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
            <% include footer.html %>
        </body>
    </html>
