<html>

    <head>
        <% include bootstrap_base.html %>
    </head>
    <% include guideline.ejs %>
    <body>
        <div class='main-container'>
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span6">
                                    <ul class='list-group'>
                                        <li class='list-group-item'>
                                            酒店名：
                                            <%- HotelInfo.Hotel_Name %><br>
                                              <%- HotelInfo.City %>--<%- HotelInfo.Province  %>
                                            </li>
                                        <ul></div>
                                        <div class="span6">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    价格区间：
                                                    <%- Price %><br>
                                                    联系方式：
                                                    <%- HotelInfo.PhoneNumber %>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="row-fluid">
                                                <div class="span6">
                                                    <div class="row-fluid">
                                                        <div class="span8">房间种类</div>
                                                        <div class="span4">价格</div>
                                                    </div>
                                                </div>
                                                <div class="span6">
                                                    <div class="row-fluid">
                                                        <div class="span6">剩余房数</div>
                                                        <div class="span6">预定</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% for (var i=0;i<RoomInfo.length;i++){ %>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="row-fluid">
                                                    <div class="span6">
                                                        <div class="row-fluid">
                                                            <div class="span8">
                                                                <%= RoomInfo[i].type %>
                                                            </div>
                                                            <div class="span4"><%= RoomInfo[i].Price %></div>
                                                        </div>
                                                    </div>
                                                    <div class="span6">
                                                        <div class="row-fluid">
                                                            <div class="span6"><%= RoomInfo[i].Available%></div>
                                                            <div class="span6">1</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    <%}%>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    哈哈哈这里应该是评论
                                </div>
                            </div>
                        </div>
                </div>
                <% include footer.html %>
            </body>
        </html>
